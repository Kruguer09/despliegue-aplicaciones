@{
    ViewData["Title"] = "Home Page";
}
<!-- Documento modificado del original para mejorar la apariencia del mismo -->
<!-- Para ahorrar trabajo je vinculado con hijas de estilo predefinidas -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Enlace a Bootstrap para adquirirframework CSS  -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        </div>

        <ul class="list-group mt-4">
            <li class="list-group-item">
                @Html.ActionLink("Lista de CENTROS DEPORTIVOS", "Index", "CentrosDeportivos", new { @class = "btn btn-primary" })
            </li>
            <li class="list-group-item">
                @Html.ActionLink("Lista de DIRECTORES", "Index", "Directores", new { @class = "btn btn-primary" })
            </li>
            <li class="list-group-item">
                @Html.ActionLink("Lista de PISTAS", "Index", "Pistas", new { @class = "btn btn-primary" })
            </li>
            <li class="list-group-item">
                @Html.ActionLink("Lista de USUARIOS", "Index", "Usuarios", new { @class = "btn btn-primary" })
            </li>
            <li class="list-group-item">
                @Html.ActionLink("Lista de USUARIOS-CENTROS", "Index", "CentroDeportivoUsuarios", new { @class = "btn btn-primary" })
            </li>
        </ul>
    </div>

    <!-- Script de Bootstrap  -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-U8p3I+COjBQKcXe8ea5O8j1OWPrZe5+CXQSHZPRgyTzqIsKqAgDDVSQt6Sv9eMIJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>